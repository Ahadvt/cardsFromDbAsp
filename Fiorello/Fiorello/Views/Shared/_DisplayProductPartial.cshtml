@model HomeVM

@using Fiorello.ViewModels

@foreach (var item in Model.productCategories)
{
    <div class="mycard  col-lg-3 col-md-6 all" data-id="@item.Category.Name.ToLower()">

        @foreach (var img in item.Product.ProductImgs)
        {
            <div class="img">
                <img src="@img.Img" alt="">
            </div>
        }
        
        <div class="name">
            <a href="#">@item.Product.Name</a>
        </div>
        <div class="price">
            <div class="adCart product">Add to cart</div>

            @if (item.Product.DiscauntId == null)
            {
                <div class="cost">@item.Product.Price$  </div>
            }
            else
            {
                <div class="cost">
                    <span style="text-decoration: line-through;">@item.Product.Price</span>
            @(item.Product.Price*(100-item.Product.Discaunt.Precenet)/100)$  </div>
                
            }
        </div>
    </div>
}